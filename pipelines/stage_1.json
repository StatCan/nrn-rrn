{
  "pipeline": {
    "name": "stage_1"
  },
  "standby" : false,
  "description": "A pipeline that executes NRN stage 1.",
  "transform": {
    "image": "artifactory.cloud.statcan.ca/docker-local/daaas/nrn:v0.2",
    "image_pull_secrets": [ "artifactory-prod" ],
    "cmd" : [ "bash" ],
    "stdin" : [ "cp -r /pfs/data/data/raw/. /nrn-app/data/raw",
		"export LC_ALL=C.UTF-8",
	 	"export LANG=C.UTF-8",
		"cd /nrn-app/src/stage_1 && python3 stage_1.py nb",
		"cp -r /nrn-app/data/interim/. /pfs/out/",
		"find -L /nrn-app/data/raw",
		"find -L /pfs/out/"

	      ],
    "env": {
      "nrn_working_dir": "/nrn-app/src/stage_1"
    }
  },
  "input": {
    "pfs": {
      "repo" : "stage_0_nb",
      "name": "data",
      "glob": "/"
    }
  }
}
