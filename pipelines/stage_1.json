{
  "pipeline": {
    "name": "stage_1"
  },
  "description": "A pipeline that executes NRN stage 1.",
  "transform": {
    "image": "artifactory.cloud.statcan.ca/docker-local/daaas/nrn:v1",
    "image_pull_secrets": [ "artifactory-prod" ],
    "cmd" : [ "bash" ],
        "stdin" : [
            "echo `ls /pfs/out/data/raw` && chmod u+x /nrn-app/pipelines/run.sh && /nrn-app/pipelines/run.sh"
        ],
    "env": {
      "nrn_working_dir": "/nrn-app/src/stage_1"
    }
  },
  "input": {
    "pfs": {
      "repo": "data",
      "glob": "/"
    }
  }
}
