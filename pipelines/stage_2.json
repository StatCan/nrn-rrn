{
  "pipeline": {
    "name": "stage_2"
  },
  "standby" : true,
  "description": "A pipeline that executes NRN stage 2.",
  "transform": {
    "image": "artifactory.cloud.statcan.ca/docker-local/daaas/nrn:v0.5",
    "image_pull_secrets": [ "artifactory-prod" ],
    "cmd" : [ "bash" ],
    "stdin" : [ "chmod u+x /nrn-app/pipelines/run.sh",
		"/nrn-app/pipelines/run.sh"
	      ],
    "env": {
      "nrn_working_dir": "/nrn-app/src/stage_2"
    }
  },
  "input": {
    "pfs": {
      "repo" : "stage_1",
      "name": "data",
      "glob": "/"
    }
  }
}
