{
  "pipeline": {
    "name": "stage_3"
  },
  "standby" : false,
  "description": "A pipeline that executes NRN stage 3.",
  "transform": {
    "image": "artifactory.cloud.statcan.ca/docker-local/daaas/nrn:v0.8",
    "image_pull_secrets": [ "artifactory-prod" ],
    "cmd" : [ "bash" ],
    "stdin" : [ "cp /pfs/data/*.gpkg /nrn-app/data/interim/",
                "export LC_ALL=C.UTF-8",
                "export LANG=C.UTF-8",
                "cd /nrn-app/src/stage_3 && python3 stage_3.py nb",
                "cp -r /nrn-app/data/interim/. /pfs/out/"
	      ],
    "env": {
      "nrn_working_dir": "/nrn-app/src/stage_3"
    }
  },
  "input": {
    "pfs": {
      "repo" : "stage_2",
      "name": "data",
      "glob": "/"
    }
  }
}
