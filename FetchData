FROM osgeo/gdal:ubuntu-small-3.0.3

#ARG DEBIAN_FRONTEND=noninteractive

ARG nrn_source=nb

ENV nrn_source ${nrn_source}

ARG nrn_url=http://geonb.snb.ca/downloads/nbrn/geonb_nbrn-rrnb_shp.zip

ENV nrn_url ${nrn_url}

USER root

COPY . /nrn-app

WORKDIR /nrn-app

# Download geospatial data from internet.

RUN chmod u+x dl-data.sh

RUN ./dl-data.sh
